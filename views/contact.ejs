<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link rel="stylesheet" href="contact.css">
</head>
<body>
    <nav class="navbar">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
        <a href="/login">Login</a>
    </nav>

    <div class="banner">
        <div class="overlay"></div> <!-- Added overlay div -->
        <div class="content">
            <h1>Contact Us</h1>
            <p>We would love to hear from you! Please fill out the form below and we will get back to you as soon as possible.</p>
            
            <form id="contactForm">
                <input type="text" placeholder="Your Name" required>
                <input type="email" placeholder="Your Email" required>
                <textarea rows="5" placeholder="Your Message" required></textarea>
                <button type="submit">Send Message</button>
            </form>

            <div class="message-sent" id="messageSent">Message Sent!</div>
        </div>
    </div>

    <audio id="dingSound" src="ding.mp3"></audio>

    <script>
        const form = document.getElementById('contactForm');
        const messageSent = document.getElementById('messageSent');
        const dingSound = document.getElementById('dingSound');

        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting
            
            dingSound.play().catch((error) => {
                console.error("Error playing sound:", error);
            });

            // Show the message
            messageSent.classList.add('show');
            setTimeout(() => {
                messageSent.classList.remove('show'); // Hide after 2 seconds
            }, 2000);
        });
    </script>
</body>
</html>
